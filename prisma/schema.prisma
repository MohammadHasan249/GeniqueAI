generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  firstName String?
  lastName  String?
  pages     Page[]
  createdAt DateTime @default(now())
}

model Page {
  id            String   @id @default(uuid())
  userId        String
  businessName String?  @db.VarChar(60)
  status        String   @default("live")
  answersJson   Json
  generatedJson Json?
  previewUrl    String?                     // can leave or remove for now
  prodUrl       String?                     // can leave or remove for now
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt @default(now())
  user          User     @relation(fields: [userId], references: [id])
}


